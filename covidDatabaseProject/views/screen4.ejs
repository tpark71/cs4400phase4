<!DOCTYPE html>
<html lang="en">
<head>
    <title>Student View Test Results</title>
    <link rel='stylesheet' href='/stylesheets/table_view.css' />
</head>
<div class="login-form">
<body>
    <h1>Student View Test Results</h1>

    
    <table>
        <% if (result[0].test_id != null) { %>
        <form action="view_my_results_filtered" method="POST">
            <tr>
            <input type="hidden" name="initial_data" value="<%=initial_data%>">
            <th>Test ID #</th>
            <th>
                    <button type="submit" name="orderby" value = "timeslot_date asc"><</button>
                    <button type="submit" name="orderby" value = "timeslot_date desc">></button>   
                    Timeslot Date</th>
            <th>
                    <button type="submit" name="orderby" value = "date_processed asc"><</button>
                    <button type="submit" name="orderby" value = "date_processed desc">></button>
                    Date Processed</th>
            <th>
                    <button type="submit" name="orderby" value = "pool_status asc"><</button>
                    <button type="submit" name="orderby" value = "pool_status desc">></button>
                    Pool Status</th>
            <th>
                    <button type="submit" name="orderby" value = "test_status asc"><</button>
                    <button type="submit" name="orderby" value = "test_status desc">></button>
                    Status</th>
            </tr>
        </form>

        <% } else { %>
            <tr>
                <th>Test ID #</th>
                <th>Timeslot Date</th>
                <th>Date Processed</th>
                <th>Pool Status</th>
                <th>Status</th>
                </tr>
        <% } %>

        <% for (var i = 0; i < result.length; i++) { %>
            <tr>
                <% if (result[i].date_processed == null) { %>
                <td><%= result[i].test_id %></td>
                <% } else { %>
                <td><a href="/explore_test_result<%=result[i].test_id%>"><%= result[i].test_id %></a></td>
                <% } %>
                <td><%= result[i].timeslot_date %></td>
                <td><%= result[i].date_processed %></td>
                <td><%= result[i].pool_status %></td>
                <td><%= result[i].test_status %></td>
            </tr>    
        <% } %>
        
     </table>
    
     <br>

    <form action="view_my_results_filtered" method="POST">
        <span id="message">Start Date</span>
        <input type="date" name="start_date">
        <span id="message">End Date</span>
        <input type="date" name="end_date">
        <input type="submit" value="Filter">
    </form>

    <form action="view_my_results" method="GET">
        <input type="submit" value="Reset">
    </form>

    <form action="home_screen" method="GET">
        <input type="submit" value="Back (Home)">
    </form>



</body>
</div>
</html>